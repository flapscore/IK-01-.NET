@model IEnumerable<HotelBooking.Models.Booking>

<h2>Bookings</h2>

<p>
    <a href="@Url.Action("Create", "Bookings")" class="btn btn-primary">Create New Booking</a>
</p>

@if (!Model.Any())
{
    <p>No bookings have been made yet.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Booking Id</th>
                <th>Room Id</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Id</td>
                    <td>@booking.RoomId</td>
                    <td>@booking.StartDate.ToString("d")</td>
                    <td>@booking.EndDate.ToString("d")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Bookings", new { id = booking.Id })" class="btn btn-info">Edit</a>
                        <a href="@Url.Action("Delete", "Bookings", new { id = booking.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
